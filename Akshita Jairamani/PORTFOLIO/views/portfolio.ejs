            margin: auto;
            overflow: hidden;
        }

        /* Project Section */
        .projects-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: space-between;
        }

        .project-card {
            position: relative;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 30%;
            text-align: center;
            transition: transform 0.3s, box-shadow 0.3s;
            overflow: hidden;
        }

        .project-card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        /* Skill Section with Progress Bar */
        .skills-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: space-between;
        }

        .skill-card {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            width: 30%;
            text-align: center;
        }

        .progress-bar {
            background: #ddd;
            border-radius: 5px;
            overflow: hidden;
            height: 10px;
            margin-top: 10px;
            position: relative;
        }

        .progress-bar .progress {
            height: 100%;
            background: #ff6600;
            transition: width 0.5s ease;
