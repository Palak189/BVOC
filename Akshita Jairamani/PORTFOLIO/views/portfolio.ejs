            margin-left: 20px;
        }

        nav ul li a {
            color: #fff;
            text-decoration: none;
            transition: color 0.3s;
        }

        nav ul li a:hover {
            color: #ff6600;
        }

        /* Hero Section */
        #hero {
            padding: 120px 0;
            text-align: center;
            color: white;
            background: linear-gradient(to bottom right, rgba(255, 102, 0, 0.9), rgba(255, 158, 87, 0.9)), url('https://via.placeholder.com/1500x800') center/cover no-repeat;
        }

        #hero h2 {
            font-size: 48px;
        }

        #hero p {
            font-size: 24px;
        }

        .btn {
            background-color: #fff;
            color: #333;
            padding: 10px 20px;
            margin-top: 20px;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s, transform 0.3s;
            display: inline-block;
        }

        .btn:hover {
            background-color: #ff6600;
            color: #fff;
            transform: translateY(-3px); /* Adds a small bounce */
        }

        /* Section Styling */
        section {
            padding: 60px 0;
        }

        h2 {
            text-align: center;
            font-size: 36px;
            margin-bottom: 20px;
        }

        .container {
